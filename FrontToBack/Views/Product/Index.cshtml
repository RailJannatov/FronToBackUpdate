@model List<Product>
@{
    ViewData["Title"] = "ProductIndex";
 

}
<section id="products">
    <div class="container">
      
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-sm-6 col-md-4 col-lg-3 mt-3">
                    <div class="product-item text-center">
                        <div class="img">
                            <a href="">
                                <img src="~/img/@item.Image" class="img-fluid" alt="">
                            </a>
                        </div>
                        <div class="title mt-3">
                            <h6>@item.Name</h6>
                        </div>
                        <div class="price">
                            <span class="text-black-50">Add to cart</span>
                            <span class="text-black-50">$@item.Price</span>
                        </div>
                    </div>
                </div>
            }



        </div>
    </div>
</section>

